//Show/Hide Implemented on Careers page
[data-show-hide-toggle="cta"] {
  span.cta-hide {
    display: none;
  }
}

[data-show-hide-toggle="content"] {
  display: block;

  &[data-show-hide-toggle-size~="hide_screen_xs"] {
    @media (max-width: screen-xs-max) {
      display: none;
    }
  }
  &[data-show-hide-toggle-size~="hide_screen_sm"] {
    @media (max-width: screen-sm-max) {
      display: none;
    }
  }
  &[data-show-hide-toggle-size~="hide_screen_md"] {
    @media (max-width: screen-md-max) {
      display: none;
    }
  }
  &[data-show-hide-toggle-size~="hide_screen_lg"] {
    @media (min-width: screen-lg) {
      display: none;
    }
  }
}



.clearfix {
  &:before,
  &:after {
    content: " "; // 1
    display: table; // 2
  }
  &:after {
    clear: both;
  }
}