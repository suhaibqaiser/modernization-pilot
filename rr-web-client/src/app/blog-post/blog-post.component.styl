// UTILS


.texthidden {
  text-indent:-9999px;
}

.visuallyhidden {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
  width: 1px;
}

.hidden-block {
  display: none;
}

.center-block {
  margin-right: auto;
  margin-left: auto;
  float: none;
}

.gutterless-col-xs {
    @media (max-width: screen-xs-max) {
        padding: 0;
    }
}

.gutterless-col {
  padding: 0;
}

.marginless {
  margin: 0;
}

.hidden-branch {
  display: none !important;
}

.hidden-contract {
  display: none !important;
}

.hidden-franchise {
